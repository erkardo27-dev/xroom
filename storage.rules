
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all images so they can be displayed in the app.
    // For a production app, you might want to tighten these rules.
    match /hotel-images/{userId}/{allPaths=**} {
      allow read: if true;
      
      // Allow a user to write (upload, update, delete) only to their own folder.
      // The {userId} in the path must match the UID of the authenticated user.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
